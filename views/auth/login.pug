extends ../layout/index

block contenido
    div.py-8 
        h1.text-4xl.my-8.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-3")
                each error in errores   
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-4.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-3(method="POST" action="/auth/login" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="email") Email:
                        input#email.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(placeholder="Email" type="email" name="email")

                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="password") Password:
                        input#password.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password")

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/registro") ¿Aún no tienes cuenta? | Crear Cuenta
                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi password
                    
                    div
                        input(class="w-full bg-indigo-600 hover:bg-indigo-700 py-3 cursor-pointer border text-white font-bold border-gray-800" type="submit" value=pagina)

    h3 Pie de página